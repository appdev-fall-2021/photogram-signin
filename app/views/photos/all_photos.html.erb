<h1>Listing: Items for Sale!</h1>

<form action="/insert_photo_record">
  <label for="browser_input">Item image</label>
  <input id="browser_input" type="text" name="input_image" placeholder="Enter a URL for the image...">

  <label for="browser_caption">Description</label>
  <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."></textarea>

  <button>Add listing</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Item image</th>
    <th>Description</th>
    <th>Seller</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.image %>">
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= photo.poster.username %>
    </td>

    <td>
      <%= photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  
  <% end %>
</table>
